@model List<Proposal>

@{
	ViewData["Title"] = "View Proposal";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<table class="table table-bordered table-striped">
	<h4>Proposal</h4>
	<thead>
        <tr>
            <th>
                Student ID
            </th>
            <th>
                Student Name
            </th>
			<th>
				Title
			</th>
			<th>
				Type
			</th>
			<th>
				Evaluator 1
            </th>
            <th>
                Evaluator 2
            </th>
			<th>
				Status
			</th>
			<th>
				Action
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in @Model)
		{
            <tr>
                <td>
                    @obj.StudentId
                </td>
                <td>
                    @obj.student.StudentName
                </td>
				<td>
					@obj.title
				</td>
				<td>
					@obj.type
				</td>
				<td>
					@if (obj.LecturerId1 == null)
					{
						<a class="btn btn-primary" asp-controller="Committee" asp-action="AssignEvaluators" asp-route-id="@obj.ProposalId">Assign Evaluators</a>
					}
					else
					{
						@obj.lecturer1.LecturerName
					}
                </td>
                <td>
                    @if (obj.LecturerId2 == null)
                    {
						<a class="btn btn-primary" asp-controller="Committee" asp-action="AssignEvaluators" asp-route-id="@obj.ProposalId">Assign Evaluators</a>
                    }
                    else
                    {
                        @obj.lecturer2.LecturerName
                    }
                </td>
				<td>
					@obj.status
				</td>
				<td>
					<a asp-action="ViewProposalForm" asp-route-id="@obj.ProposalId">View Form</a>
				</td>
			</tr>
		}
	</tbody>
</table>
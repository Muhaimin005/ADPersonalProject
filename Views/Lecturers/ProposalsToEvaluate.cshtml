@model IEnumerable<ADTest.Models.Proposal>

<h2>Proposals</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proposal in Model)
        {
            <tr>
                <td>@proposal.title</td>
                <td>@proposal.type</td>
                <td>@proposal.status</td>
                <td>
                    <a asp-action="ProposalDetails" asp-route-id="@proposal.ProposalId" class="btn btn-primary">View</a>
                    <a asp-action="DownloadProposalForm" asp-route-id="@proposal.ProposalId" class="btn btn-secondary">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>

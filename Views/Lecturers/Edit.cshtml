                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="" aria-required="true" placeholder="Phone Number" />
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="email">Email</label>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LecturerAddress" class="form-control" autocomplete="" aria-required="true" placeholder="Lecturer Address" />
                <label asp-for="LecturerAddress">Lecturer Address</label>
                <span asp-validation-for="LecturerAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FieldofStudy" class="form-control" autocomplete="" aria-required="true" placeholder="Field of Study" />
                <label asp-for="FieldofStudy">Field of Study</label>
                <span asp-validation-for="FieldofStudy" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Domain" class="form-control" autocomplete="" aria-required="true" placeholder="Field of Study" />
                <label asp-for="Domain">Domain</label>
                <span asp-validation-for="Domain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ADTest.Models.ViewModel.LecturerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lecturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="lecturerId" />

            <div class="form-floating mb-3">
                <input asp-for="LecturerName" class="form-control" autocomplete="" aria-required="true" placeholder="Name" />
